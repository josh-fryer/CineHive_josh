@model PagedList.IPagedList<HiveData.Models.Post>
@using Microsoft.AspNet.Identity;
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    string userid = User.Identity.GetUserId();
}


<h2>Post Feed</h2>


@foreach (var item in Model)
{
    <div class="container">
        <div class="well">
            <div class="media">
                <a class="pull-left" href="#">
                    <img src="~/Content/Img/profile-image-placeholder.png" width="140" height="140" />
                </a>
                <div class="media-body">
                    <h4 class="media-heading">@item.UserId</h4>
                    <p>
                        @item.PostContent
                    </p>
                    <ul class="list-inline list-unstyled">
                        <li> @item.DatePosted </li>
                        <li>|</li>
                        <li> @item.Awards Awards</li>
                    </ul>
                    <ul class="list-inline list-unstyled">
                        <li>@Html.ActionLink("Award", "GiveAward", new { Id = item.PostId })</li>
                        <li>|</li>
                        <li>@Html.ActionLink("Comment", "")
                        <li>|</li>
                        <li>@Html.ActionLink("Share", "")</li>
                        <li>|</li>
                        @if (userid == item.UserId)
                        {
                            <li>@Html.ActionLink("Remove", "DeletePost", "Post", new { id = item.PostId }, null)</li>
                            <li>|</li>
                            <li>@Html.ActionLink("Edit", "EditPost", "Post", new { id = item.PostId }, null)</li>
                        }
                    </ul>

                </div>
            </div>
        </div>
    </div>
}

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))



