@model IEnumerable<HiveData.Models.Album>

@{
    ViewBag.Title = "Albums";
}
<div class="container">
    <div class="row profile">
        <div class="col-md-3">
            <div class="album-sidebar">

                <div class="profile-usermenu">
                    <ul class="nav">
                        <li class="active">
                            <a href="@Url.Action("Index", "Profile")">
                                <i class="glyphicon glyphicon-arrow-left"></i>
                                Go back
                            </a>
                        </li>
                        <li>
                            Create a new album.
                            @using (Html.BeginForm("CreateAlbum", "Album", FormMethod.Post))
                            {
                                <input id="AlbumName" type="text" name="input1" maxlength="30" placeholder="Album Name" />
                                <input id="AlbumDesc" type="text" name="input2" maxlength="80" placeholder="Album Description" />
                                <input type="submit" value="Create" class="btn btn-default" />

                            }

                        </li>
                    </ul>
                </div>
            </div>

        </div>

            <div class="col-md-9">
                <div class="profile-content">

                    @if (Model.Any(i => i != null))
                    {

                        foreach (var item in Model)
                        {
                    <div class="col-md-3 col-sm-4 col-xs-6">
                            <a asp-action="Details" asp-controller="Album" asp-route-id="" href="@Url.Action("ViewAlbum", "Album", new {id = item.AlbumId })"/>
                            <img class="img-responsive" src="~/Content/Img/album-placeholder.jpg" />
                            <div class="album-text">
                                @Html.ActionLink(item.AlbumName, "ViewAlbum", "Album", new { id = item.AlbumId }, new {@class = "album-text-dec" })
                            </div>
                    </div>


                        }
                    }
                    else
                    {
                        <div>
                            <p>You dont have any albums</p>

                            @Html.ActionLink("Create a new album", "Create")

                        </div>

                    }
                </div>
           </div>
    </div>
</div>


