@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">      
        <li>
            @Html.ActionLink("Welcome back, " + Session["fName"], "Index", "Profile", routeValues: null, htmlAttributes: new { title = "Manage" })           
        </li>
        <li>@Html.ActionLink("Notifications", "Index", "Notification")</li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Not you?</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Join today", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
