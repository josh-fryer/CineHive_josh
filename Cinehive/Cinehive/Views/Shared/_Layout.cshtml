<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CineHive</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/CustomCinehive.css")
    @Scripts.Render("~/bundles/jquery")

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>

                </button>
                @Html.ActionLink("Cinehive", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @if (HttpContext.Current.User.Identity.IsAuthenticated)
                        {
                            using (Html.BeginForm("Search", "Search", FormMethod.Get, new { @class = "navbar-form" }))
                            {
                                <div class="input-group search-bar">
                                    <input type="search" class="form-control" placeholder="Search CineHive" name="query" size="100">
                                    <div class="input-group-btn">
                                        <button class="btn btn-default" type="submit">
                                            <i class="glyphicon glyphicon-search"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        }
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    @RenderBody()

    @* ---------------- Footer ---------------- *@
    <div class="container">
        <div class="navbar-myfooter">
            <div class="container">
                <div class="footer-content">
                    <p>&copy; @DateTime.Now.Year - Cinehive.</p>
                    <img src="~/Content/Img/SiteImg/blue_short-TMDb logo.svg" width="80"/>   
                </div>
            </div>
        </div>
    </div>
        <!-- Load React. -->
        <!-- Note: when deploying, replace "development.js" with "production.min.js". -->
        @*<script src="https://unpkg.com/react@17/umd/react.development.js" crossorigin></script>
        <script src="https://unpkg.com/react-dom@17/umd/react-dom.development.js" crossorigin></script>*@
      
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/Content/Scripts/CinehiveScript.js")
        @RenderSection("scripts", required: false)
</body>
</html>
