@model IEnumerable<HiveData.Models.Post>

@{
    ViewBag.Title = "GetCurrUserPosts";
}

<h2>Viewing Your Posts</h2>

<p>
    @Html.ActionLink("Create New Post", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PostContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatePosted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Awards)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PostContent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatePosted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Awards)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.PostId }) |
        @Html.ActionLink("Details", "Details", new { id=item.PostId }) |*@
            @Html.ActionLink("Delete", "DeletePost", new { id = item.PostId })
        </td>
    </tr>
}

</table>
