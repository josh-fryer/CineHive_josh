<div class="col-md-3">
    <div class="profile-sidebar">

        <div class="profile-userpic">
            @if (Model.userProfile.ImagePath == null)
            {
                <img src="~/Content/Img/profile-image-placeholder.png" class="img-responsive" alt="">
            }
            else
            {
                <img src="~/@Model.userProfile.ImagePath" alt="">
            }
        </div>

        <div class="profile-usertitle">
            <div class="profile-usertitle-name">
                @Model.userProfile.Firstname @Model.userProfile.Lastname
            </div>
        </div>

        <div class="profile-usermenu">
            <ul class="nav">
                <li class="active">
                    <a href="@Url.Action("Index","Profile")">
                        <i class="glyphicon glyphicon-th-list"></i>
                        Feed
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index","Album")">
                        <i class="glyphicon glyphicon-picture"></i>
                        Photos
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("ViewFriends","Profile", new { profileId = Model.userProfile.ProfileId })">
                        <i class="glyphicon glyphicon-user"></i>
                        Friends
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Edit","Profile")">
                        <i class="glyphicon glyphicon-wrench"></i>
                        Account Settings
                    </a>
                </li>
            </ul>
        </div>
        <div class="bio-box">
            <hr />
            <h4>About me</h4>
            <p>@Model.userProfile.AboutMe</p>
        </div>

        <div class="bio-box">
            <hr/>
            <h4>Favourite Genres</h4>
            <ul class="list-unstyled">
            @for (int i = 0; i < ViewBag.GenreNames.Count; i++)
            {
                <li class="fave-genre-list"><span class="fave-genre-item">@ViewBag.GenreNames[i]</span></li>
            }
            </ul>
        </div>

    </div>
</div>
